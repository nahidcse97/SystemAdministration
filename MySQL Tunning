wget https://raw.githubusercontent.com/major/MySQLTuner-perl/master/mysqltuner.pl
chmod +x mysqltuner.pl
./mysqltuner.pl

vim /etc/my.cnf


[mysqld]
default-storage-engine=INNODB
innodb_strict_mode=0
sql_mode=''
max_connections=1000
max_heap_table_size = 256M
tmp_table_size = 2568M
thread-cache-size = 50
open-files-limit = 65535
key_buffer_size=0
innodb_file_per_table=ON
innodb_flush_method=O_DIRECT
innodb_buffer_pool_size = 4G #depend on server ram 1/4 of ram
innodb_buffer_pool_instances = 4 #buffer pool size will create instances, like pool_size is 4G and instances is 2 so a single instance will use 2G pool size.
innodb_log_buffer_size = 64M
innodb_log_file_size = 512M
innodb-flush-log-at-trx-commit = 1
innodb-file-per-table          = 1
innodb_file_per_table=0
innodb_stats_persistent=0
innodb_lock_wait_timeout=200
innodb_rollback_on_timeout=1
transaction-isolation = READ-COMMITTED
join_buffer_size = 128M
sort_buffer_size = 2M
read_rnd_buffer_size = 2M
default_authentication_plugin = mysql_native_password
bind-address = 127.0.0.1
explicit_defaults_for_timestamp = 0
skip-log-bin
skip-name-resolve = 1
disable_log_bin
# Disabling symbolic-links is recommended to prevent assorted security risks
symbolic-links=0

datadir=/var/lib/mysql
socket=/var/lib/mysql/mysql.sock

log-error=/var/log/mysqld.log
pid-file=/var/run/mysqld/mysqld.pid




service mysqld restart

./mysqltuner.pl
